@require 'constants'
$maskColor = rgba(0, 0 ,0 ,0.5)

.lightboxWrapper
	background-color: $maskColor
	display: none
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 100

	.arrowUp
		position: absolute;
		top: 50px
		right: 15px
		transform: translateY(-90%)
		height: 0
		width: 0
		border: 15px solid
		border-color: transparent transparent #ffffff transparent

	.lightboxWrapper__nav
		position: relative
		top: 50px
		right: 12px
		width: 100%
		display: flex
		align-items: center
		justify-content: flex-end

		.nav__list
			background-color: #ffffff
			border-radius: $commonBorderRadius
			font-size: 16px
			text-align: center

			.list__item
				border-bottom: 1px solid #0C2D48
				padding: 15px 20px
			.list__item:last-child
				border-bottom: none

.lightboxWrapper--active
	display: block;
